<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".states.MainState">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:id="@+id/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:onClick="connect"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="261dp" />
        <Button
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:id="@+id/createGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create game"
            android:onClick="createGame"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="261dp" />

        <Button
            android:id="@+id/joinGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join game"
            android:onClick="joinGame"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="416dp" />

        <EditText
            android:id="@+id/answer"
            android:layout_width="112dp"
            android:layout_height="64dp"
            android:text="answer"
            tools:layout_editor_absoluteX="177dp"
            tools:layout_editor_absoluteY="356dp" />
        <Button
            android:id="@+id/sendAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Answer"
            android:onClick="sendAnswer"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="416dp" />

        <Button
            android:id="@+id/leaveGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leave game"
            android:onClick="leaveGame"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="416dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/displayInfo"/>


        <!--
        To test if autocomplete works
        -->

        <EditText
            android:id="@+id/search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="search for text"
            tools:layout_editor_absoluteX="171dp"
            tools:layout_editor_absoluteY="107dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="give autocomplete answers"
            android:onClick="autocomplete"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="143dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>