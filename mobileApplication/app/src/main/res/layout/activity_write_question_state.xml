<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_background"
    android:id="@+id/main">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            app:layout_constraintVertical_bias="0.2"
            style="@style/HeadingStyle"
            android:text="Write in two locations!"/>
        <EditText
            app:layout_constraintVertical_bias="0.4"
            android:id="@+id/locationa"
            android:hint="Location A"
            style="@style/InputField"
             />

        <EditText
            style="@style/InputField"
            app:layout_constraintVertical_bias="0.55"
            android:id="@+id/locationb"
            android:hint="Location B"
             />
        <Button
            app:layout_constraintVertical_bias="0.7"
            android:text="@string/create_question"
            android:onClick="createQuestion"
            style="@style/PrimaryButton"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/displayInfo"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>