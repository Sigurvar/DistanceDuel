<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location A"/>
        <EditText
            android:id="@+id/locationa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="location A"

            android:text=""
            tools:layout_editor_absoluteX="171dp"
            tools:layout_editor_absoluteY="107dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location B"/>
        <EditText
            android:id="@+id/locationb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="location B"
            tools:layout_editor_absoluteX="171dp"
            tools:layout_editor_absoluteY="107dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Question"
            android:onClick="createQuestion"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="143dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/displayInfo"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>